<%-include('../cabecalho.ejs')%>
    <form method="post" enctype="multipart/form-data">
        Id: <input type="text" name="id" 
            required value="<%=Usuario._id%>" readonly ><br>
        artista: <input type="text" name="artista" 
            placeholder="Digite o nome do artista: " required 
            value="<%=Usuario.artista%>" ><br>
        album: <input type="text" name="album" 
            placeholder="Digite o nome do álbum: "
            value="<%=Usuario.album%>" required><br>
        dataLanc: <input type="date" name="dataLanc" 
            placeholder="Digite a data de lançamento: "
            value="<%=Usuario.dataLanc%>" required><br>
        numFaixas: <input type="number" name="numFaixas" 
            required value="<%=Usuario.numFaixas%>" ><br>
        foto: <input type="file" name="foto" 
            accept="image/*"><br>
        <input type="submit" value="Salvar">
    </form>
