<%-include('../cabecalho.ejs')%>

    <form method="post">
        <input type="text" class="pesquisa" name="pesquisa" placeholder="Digite o álbum do BTS que deseja pesquisar: ">
        <input type="submit" value="Pesquisar">
    </form>
    <table>
        <tr>
            <th>Artista</th>
            <th>Álbum</th>
            <th>Data Lançamento</th>
            <th>Número de faixas</th>
            <th>Foto</th>
            <th>Editar</th>
        </tr>
        <% Usuarios.forEach(function(usuario){ %>
        <tr>
            <td>
                <%=usuario.artista%>
            </td>
            <td>
                <%=usuario.album%>
            </td>
            <td>
                <%let z = (usuario.dataLanc.getMonth()+1)%>
                <%=usuario.dataLanc.getDate()+1+"/"+z+"/"+usuario.dataLanc.getFullYear()%>
            </td>
            <td>
                <%=usuario.numFaixas%>
            </td>
            <td>
                <img class="img-responsive" 
                    src="/fotos/<%=usuario.foto%>" 
                    alt="Capa do álbum: ">
            </td>
            <td>
                <a href="/usuario/edt/<%=usuario._id%>">
                    <img class="img-responsive" src="/edit.png" alt="Editar">
                </a>
                <a href="/usuario/del/<%=usuario._id%>">
                    <img class="img-responsive" src="/delete.png" alt="Deletar">
                </a>
            </td>
        </tr>
        <% }) %>
    </table>
<%-include('../rodape.ejs')%>